# Configuración para ambiente de producción
# COPIA este archivo como .env.production y configura tus valores
# ⚠️ NUNCA subas el archivo .env.production real a GitHub

FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Configuraciones de producción
LOG_LEVEL=ERROR
SECRET_KEY=REPLACE_WITH_VERY_SECURE_SECRET_KEY

# URLs y configuraciones para producción (ejemplos)
# DATABASE_URL=postgresql://prod_user:very_secure_password@prod-db:5432/prod_metodos_numericos
# REDIS_URL=redis://prod-redis:6379

# Configuraciones de monitoreo y alertas (ejemplos)
# SENTRY_DSN=https://your-prod-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your-prod-newrelic-license-key

# Configuraciones de seguridad
FORCE_HTTPS=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# Configuraciones de email (ejemplos)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USER=your-email@domain.com
# EMAIL_PASSWORD=your-app-password